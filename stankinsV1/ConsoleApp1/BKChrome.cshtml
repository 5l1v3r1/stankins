@model StankinsInterfaces.IRow[]
@{
    bool existsRecords = (Model.Length > 0);
    if (!existsRecords)
    {
        return;
    };
    int nrPages = 15;
}
@for (int i = 0; i < Model.Length; i++)
{
    bool separatorFirst = (i % nrPages == 0);
    bool separatorLast = ((i+1) % (nrPages ) == 0);
    separatorLast = separatorLast || (i + 1 == Model.Length);

    var item = Model[i];
    if (separatorFirst)
    {
        @:<ol>
    }

    <li><a href='@item.Values["href"]'>@item.Values["title"]</a></li>
    if (separatorLast)
    {
        @:</ol>
    }
}
